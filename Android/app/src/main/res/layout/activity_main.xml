<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:textAlignment="center"
    android:id="@+id/view"
    android:background="#ff000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnected"
        android:id="@+id/textStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connect"
        android:layout_below="@+id/textStatus"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:enabled="true" />

    <TextView
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:text="R: 110"
        android:id="@+id/textR"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/seekBarR"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:text="G: 0"
        android:id="@+id/textG"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/seekBarG"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:text="B: 126"
        android:id="@+id/textB"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/seekBarB"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarR"
        android:max="255"
        android:indeterminate="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="10dp"
        android:progressBackgroundTint="#ffff9b4e"
        android:progressTint="#ffff9b4e"
        android:layout_toRightOf="@+id/textR"
        android:layout_above="@+id/seekBarG" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarG"
        android:max="255"
        android:indeterminate="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:progressBackgroundTint="#ffff9b4e"
        android:progressTint="#ffff9b4e"
        android:layout_toRightOf="@+id/textG"
        android:layout_above="@+id/seekBarB" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarB"
        android:max="255"
        android:indeterminate="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:progressBackgroundTint="#ffff9b4e"
        android:progressTint="#ffff9b4e"
        android:layout_toRightOf="@+id/textB"
        android:layout_above="@+id/animation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animation"
        android:id="@+id/animation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:enabled="true"
        android:layout_above="@+id/low" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Brightness"
        android:id="@+id/low"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:enabled="true"
        android:layout_above="@+id/high" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Brightness"
        android:id="@+id/high"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:enabled="true"
        android:layout_alignParentBottom="false"
        android:layout_above="@+id/seekBarI" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/disconnect"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textStatus"
        android:layout_marginTop="10dp"
        android:enabled="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarI"
        android:max="255"
        android:indeterminate="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:progressBackgroundTint="#ffff9b4e"
        android:progressTint="#ffff9b4e"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/color"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:enabled="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:layout_below="@+id/connect"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/seekBarR" />

</RelativeLayout>
